<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--queries -->
    <bean id="findAllMovies" class="java.lang.String">
        <constructor-arg value="Select id, namerussian, namenative, yearofrelease, rating, price, picturepath From movies;"/>
    </bean>

    <bean id="findRandomMovies" class="java.lang.String">
        <constructor-arg value="Select id, namerussian, namenative, yearofrelease, rating, price, picturepath From movies Order by random() limit ${sql.limitrandommovies}"/>
    </bean>

    <bean id="findAllGenres" class="java.lang.String">
        <constructor-arg value="Select id, name From genre;"/>
    </bean>

</beans>